<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"  "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Mem">

	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />
	<typeAlias alias="mem" type="com.hello.world.dto.MemVO" />

	<select id="insertMem" parameterClass="mem">
		insert into mem(mem_mail,
		mem_nm, mem_pw, mem_phn, mem_addr, mem_sex, mem_lang, mem_nick,
		mem_grade_code, crr_code, workex_code)
		values(#mem_mail#,
		#mem_nm#, #mem_pw#, #mem_phn#m, #mem_addr#, #mem_sex#, #mem_lang#,
		#mem_nick#, #mem_grade_code#, #crr_code#, #workex_code#)
	</select>

	<select id="listMem" parameterClass="str" resultClass="mem">
		select *
		from mem where mem_nm like '%'||#mem_nm#||'%' order by mem_join_date
		desc
	</select>

	<select id="getMem" parameterClass="str" resultClass="mem">
		select *
		from mem where mem_mail=#mem_mail#
	</select>

	<update id="updateMem" parameterClass="mem">
		update mem set
		mem_nm=#mem_nm#,mem_pw=#mem_pw#,mem_phn=#mem_phn#,mem_addr=#mem_addr#,mem_sex=#mem_sex#,mem_lang=#mem_lang#,mem_nick=#mem_nick#,addr_zipnum=#addr_zipnum#,mem_grade_code=#mem_grade_code#,crr_code=#crr_code#,workex_code=#workex_code#
		where mem_mail=#mem_mail#
	</update>

</sqlMap>