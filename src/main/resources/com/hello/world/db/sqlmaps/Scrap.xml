<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"  "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Scrap">
	
	<select id="listAllScrap" parameterClass="testVO" resultClass="Scrap" >
		select *
		from memscrap 
		where $type$ like '%'||#key#||'%'  order by TO_NUMBER(scrap_no) desc
	</select>
	
	<select id="totalScrap" parameterClass="testVO" resultClass="int">
		select count(*) from memscrap where $type$ like '%'||#key#||'%'
	</select>
	
	<!-- 스크랩 -->
	<update id="insertScrap" parameterClass="Scrap">
		insert into scrap(scrap_no,scrap_cont,mem_mail) values(scrap_no.nextval,scrap_cont##,#mem_mail#)
	</update>
	

	

	
	
</sqlMap>