<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"  "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="MeetBoard">
	<typeAlias alias ="str" type="java.lang.String"/>
	<typeAlias alias ="int" type="java.lang.Integer"/>
	<typeAlias alias="meetboard" type="com.hello.world.dto.MeetBoardVO"/>
	<typeAlias alias="mem" type="com.hello.world.dto.MemVO"/>

	<select id="listMeetBoard" parameterClass="str" resultClass="meetboard">
		select * from meet_board where mem_mail=#mem_mail#
	</select>

	<select id="getMeetBoard" parameterClass="str" resultClass="meetboard">
		select * from meet_board where meet_board_posting_no=#meet_board_posting_no#
	</select>

	<insert id="insertMeetBoard" parameterClass="meetboard">
		insert into meet_board(meet_board_posting_no, mem_mail, meet_board_title, meet_board_cont)
		values(meet_board_posting_no.nextval,#mem_mail#,#meet_board_title#,#meet_board_cont#)		
	</insert>
	<update id="updateMeetBoard" parameterClass="meetboard">
			update meet_board
			set
				meet_board_cont=#meet_board_cont#
			where meet_board_posting_no=#meet_board_posting_no#
	</update>
	
	<select id="listAllMeetBoard" parameterClass="str" resultClass="meetboard">
			select * from memmeet where meet_board_posting_no=#meet_board_posting_no#
	</select>
	
	<delete id="deleteMeetBoard" parameterClass="str">
			delete
			from meet_board
			where meet_board_posting_no=#meet_board_posting_no#
	</delete>
	<select id="totalMeetBoard" parameterClass="str" resultClass="int">
		select count(*) from meet_Board where meet_board_title like '%'||#meet_board_title#||'%'
	</select>


</sqlMap>