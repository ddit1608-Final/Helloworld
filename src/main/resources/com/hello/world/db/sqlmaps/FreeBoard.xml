<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"  "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="FreeBoard">

	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />	
	<typeAlias alias="freeBoard" type="com.hello.world.dto.FreeBoardVO" />
	
	<select id="listFreeBoard" parameterClass="str" resultClass="freeBoard">
		select * from freeBoard where id=#mem_mail# order by qseq desc
	</select>
	
	<select id="getFreeBoard" parameterClass="int" resultClass="freeBoard">
		select * from freeBoard where qseq=#seq#
	</select>
	
	<insert id="insertFreeBoard" parameterClass="freeBoard">
		insert into freeBoard (freeBoard_posting_no,mem_mail,freeBoard_title,freeBoard_cont,freeBoard_wridate
			,freeBoard_hits,freeBoard_pwd) 
				values(freeBoard_seq.nextval, #mem_mail#,#freeboard_title#,#freeboard_cont#,#freeboard_wridate#,
					#freeboard_hits#,#freeboard_pwd#)
	</insert>
	
	<select id="listAllFreeBoard" resultClass="freeBoard">
		select * from freeBoard order by indate desc
	</select>
	
	<update id="updateFreeBoard" parameterClass="freeBoard" >
		update freeBoard set reply=#reply#, rep='2' where qseq=#qseq#
	</update>
</sqlMap>